#!/usr/bin/perl -w

$problem = shift(@ARGV);

$cmdstring = "./rewrite-no-lp --time-based-on-expansions-per-second 500 --include-metareasoning-time --multiply-TILs-by 1 --real-to-plan-time-multiplier 1 --calculate-Q-interval 100  --add-weighted-f-value-to-Q -0.000001 --min-probability-failure 0.001 --slack-from-heuristic --forbid-self-overlapping-actions --deadline-aware-open-list IJCAI --ijcai-gamma 1 --ijcai-t_u 100 --icaps-for-n-expansions 100 --time-aware-heuristic 1 DepotsTime.pddl $problem";

open IN, "$cmdstring |";

$writing = 0;

while (<IN>) {
    print;
    if (m/Solution Found/) {
        $writing = 1;
        open PLANFILE, "> 500plan-$problem";
        print PLANFILE;
    } elsif ($writing == 1) {
        print PLANFILE;
    }
}

close IN;

if ($writing == 1) {
    close PLANFILE;
}
